<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
     android:background="@drawable/back"
    android:orientation="vertical" >


    <ListView
        android:id="@+id/listView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:cacheColorHint="#ffffff"
         android:dividerHeight="1dip"
        android:layout_marginBottom="50dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/RelativeLayout2" >
    </ListView>

    <RelativeLayout
        android:id="@+id/musicInfor"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" 
      
     >

      <ImageView
            android:id="@+id/musicPic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/musical"
              android:background="@drawable/player_progresslayout_bg"/>    

       <RelativeLayout
            android:id="@+id/musicAbout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignTop="@id/musicPic"
            android:layout_toRightOf="@+id/musicPic"
             android:background="@drawable/player_progresslayout_bg"
        
            >
      

            <TextView
                android:id="@+id/musicName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/white" 
                android:text="@string/none"/>

            <TextView
                android:id="@+id/musicLong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/white" 
                android:text="@string/none"/>
            </RelativeLayout>
        <Button
            android:id="@+id/musicButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true" 
            android:background="@drawable/start" />



</RelativeLayout>
</RelativeLayout>